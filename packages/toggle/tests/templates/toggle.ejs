<%
  let classes = locals.classes || [];
 
  classes.push(prefix + '-toggle');
 
  if (locals.border !== undefined) {
    classes.push(prefix +'-toggle--border-bottom');
  }
  if (locals.left !== undefined) {
    classes.push(prefix +'-toggle--label-left');
  }
%>

<div <%- includeClasses(classes)%>>
  <input type="checkbox" class="<%= prefix %>-toggle__input" id="<% if(locals.groupToggleId){ %><%= groupToggleId %><%= toggleId %><% } else {%><%= toggleId %><% } %>" <% if(locals.state){ %> data-<%= prefix %>-checked-label="activé" data-<%= prefix %>-unchecked-label="désactivé" <% } %><% if(locals.disabled){ %>disabled="disabled"<%}%>>
  <label class="<%= prefix %>-toggle__label" for="<% if(locals.groupToggleId){ %><%= groupToggleId %><%= toggleId %><% } else {%><%= toggleId %><% } %>"><%- label %></label>
</div>
