<%

let samples = [
  { title:'Lien seul', sample:'./samples/link-default'},
  { title:'Lien seul SM', sample:'./samples/link-sm'},
  { title:'Lien seul LG', sample:'./samples/link-lg'},
]
%>

<%
const left = {iconPlace: 'left', icon: 'arrow-left-line'};
const right = {iconPlace: 'right', icon: 'arrow-right-line'};
const only = {icon: 'arrow-down-line'};

for (let i = 0; i < samples.length; i++) {
  let sample = samples[i];
%>
<h4><%= sample.title %></h4>
<div>
  <%- include(sample.sample); %>
</div>
<div>
  <%- include(sample.sample, left); %>
</div>
<div>
  <%- include(sample.sample, right); %>
</div>
<div>
  <%- include(sample.sample, only); %>
</div>
<%- snippet(include(sample.sample)); %>
<%- snippet(include(sample.sample, left)); %>
<%- snippet(include(sample.sample, right)); %>
<%- snippet(include(sample.sample, only)); %>
<% } %>

