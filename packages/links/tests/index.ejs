<%

let samples = [
  { title:'Lien seul', sample:'./samples/link-default'},
  { title:'Lien seul SM', sample:'./samples/link-sm'},
  { title:'Lien seul LG', sample:'./samples/link-lg'},
]
%>

<%
for (let i = 0; i < samples.length; i++) {
  let sample = samples[i];
%>
<h4><%= sample.title %></h4>
<div>
  <%- include(sample.sample); %>
</div>
<div>
  <%- include(sample.sample, {iconPlace: 'left'}); %>
</div>
<div>
  <%- include(sample.sample, {iconPlace: 'right'}); %>
</div>
<div>
  <%- include(sample.sample, {iconPlace: 'only'}); %>
</div>
<%- snippet(include(sample.sample)); %>
<%- snippet(include(sample.sample, {iconPlace: 'left'})); %>
<%- snippet(include(sample.sample, {iconPlace: 'right'})); %>
<%- snippet(include(sample.sample, {iconPlace: 'only'})); %>
<% } %>

