<%
    let statusCollections,
        actionNavigationCollections,
        contentMediaCollections,
        pdfCollections;

    statusCollections = [
        ['alert-fill', 'alert-line', 'question-fill', 'question-line', 'information-fill', 'information-line'],
        ['arrow-up-line', 'arrow-right-line', 'arrow-down-line', 'arrow-left-line', 'arrow-up-s-line', 'arrow-right-s-line', 'arrow-down-s-line', 'arrow-left-s-line']
    ];
    actionNavigationCollections = [
        ['close-line', 'check-line', 'checkbox-line', 'close-circle-line'],
        ['user-fill', 'user-line', 'account-fill', 'account-line', 'lock-fill', 'lock-line'],
        ['menu-fill', 'menu-2-fill'],
        ['search-fill', 'search-line'],
        ['eye-line', 'eye-off-line'],
        ['printer-fill', 'printer-line', 'file-download-fill', 'file-download-line', 'download-line', 'external-link-line', 'edit-fill', 'edit-line'],
        ['delete-line', 'delete-fill'],
        ['save-fill', 'save-line'],
        ['calendar-fill', 'calendar-line'],
        ['file-fill', 'file-line'],
        ['mail-fill', 'mail-line']
    ];
    contentMediaCollections = [
        ['play-fill', 'play-line', 'volume-up-fill', 'volume-up-line', 'volume-mute-fill', 'volume-mute-line', 'volume-down-fill', 'volume-down-line', 'pause-circle-fill', 'pause-circle-line']
    ];
    pdfCollections = [
        ['file-pdf-fill', 'file-pdf-line']
    ];

    let samples = [
        { title : 'Statuts (Icon font / SVG symbols)', collections:statusCollections},
        { title : 'Actions et navigation (Icon font / SVG symbols)', collections:actionNavigationCollections},
        { title : 'Contenus et mÃ©dias (Icon font / SVG symbols)', collections:contentMediaCollections},
        { title : 'PDF (Icon font / SVG symbols)', collections:pdfCollections}
    ]
%>

<%
    for (let i = 0; i < samples.length; i++) {
        let sample = samples[i];
%>
    <h4 class="<%= prefix %>-h4"><%= sample.title %></h4>

    <%
        sample.collections.forEach((collection) => {
    %>
        <div>
            <%- include('./samples/icons.ejs', { icons: collection }); %>
            <%- snippet(include('./samples/icons.ejs', { icons: collection })); %>
        </div>
    <% }); %>

<% } %>

