<%
  let samples = [
    {title:'Default input type text', sample:'./samples/input-text.ejs', data:{ id:'text-input-text'}},
    {title:'Default input type number', sample:'./samples/input-number.ejs', data:{ id:'text-input-number'}},
    {title:'Default input type search', sample:'./samples/input-search.ejs', data:{ id:'text-input-search'}},
    {title:'Default input type tel - required field', sample:'./samples/input-tel.ejs', data:{ id:'text-input-tel', required:true, error:true}},
    {title:'Default input type mail - required field', sample:'./samples/input-mail.ejs', data:{ id:'text-input-mail', required:true, error:true }},
    {title:'Default input type date - required field', sample:'./samples/input-date.ejs', data:{ id:'text-input-date', required:true, error:true }},
    {title:'Default input type textarea', sample:'./samples/textarea.ejs', data:{ id:'textarea', group:true }},
    {title:'Type password', sample:'./samples/input-password.ejs', data:{ id:'text-input-password', group: true }},
    {title:'Default input with placeholder', sample:'./samples/input-text.ejs', data:{ id:'text-input-placeholder', placeholder:'placeholder'}},
    {title:'Default input with value', sample:'./samples/input-text.ejs', data:{ id:'text-input-value', attributes: {value:'value'}}},
    {title:'Default input disabled', sample:'./samples/input-text.ejs', data:{ id:'text-input-disabled', disabled:true}},
    {title:'With hint', sample:'./samples/input-text.ejs', data:{ id:'text-input-hint', hint: true, group:true}},
    {title:'With icon', sample:'./samples/input-text.ejs', data:{ id:'text-input-icon', hint: true, group:true, icon:'alert-line'}},
    {title:'Valid with text', sample:'./samples/input-text.ejs', data:{ id:'text-input-valid', valid: true, group:true}},
    {title:'Error with text', sample:'./samples/input-text.ejs', data:{ id:'text-input-error', error: true, group:true}},
  ]
 %>

<%
  for (let i = 0; i < samples.length; i++) {
  let sample = samples[i];
%>
<h4 class="<%= prefix %>-h4"><%= sample.title %></h4>
  <%- include(sample.sample, sample.data); %>
  <%- snippet(include(sample.sample, sample.data)); %>
<% } %>


<h4 class="<%= prefix %>-h4">Multiple input group</h4>
<%- include('./samples/input-text.ejs', { id:'text-input-groups1', hint: true, group:true}); %>
<%- include('./samples/input-text.ejs', { id:'text-input-groups2', error: true, group:true}); %>
<%- include('./samples/input-text.ejs', { id:'text-input-groups3', valid: true, group:true}); %>
<%- include('./samples/input-text.ejs', { id:'text-input-groups4', hint: true, error:true, group:true}); %>
<%- include('./samples/input-text.ejs', { id:'text-input-groups5', hint:true, valid: true, group:true}); %>
