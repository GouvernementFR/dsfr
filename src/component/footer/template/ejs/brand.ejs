<%#
# paramètres footer brand

* footer.brand (object, required) : Paramètres du bloc marque
  ** footer.brand.logo (object, optional) : Paramètres du logo bloc marque
	
* footer.operator (object, optional) : Paramètres du logo operator

%>
<% let footer = locals.footer || {} %>
<% let brand = footer.brand || {} %>

<div class="<%= prefix %>-footer__brand <%= prefix %>-enlarge-link" >
	<% if (!footer.operator) { %>
		<a href="/" title="Retour à l’accueil">
	<% } %>
			<%- include( '../../../logo/template/ejs/logo', {logo: brand.logo}); %>
	<% if (!footer.operator) { %>
		</a>
	<% } else { %>
		<a class="<%= prefix %>-footer__brand-link" href="/" title="Retour à l’accueil">
			<%- include('../../../../core/template/ejs/media/responsive-img.ejs', {media: { ...footer.operator, classes: [prefix + '-footer__logo']}}); %>
		</a>
	<% } %>
</div>

