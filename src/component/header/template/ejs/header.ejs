<%#
# paramètres header

* header (object, required) : Paramètres du template
  ** header.body (object, required) : Paramètres du template body
  ** header.menu (object, optional) : Paramètres du template menu

Exemple complet :

header = {
    body: {
        brand: {
            logo: { voir logo },
            operator: {
                src: 'url de l'img',
                alt: 'texte alternatif',
                style: ''
            },
            service: {
                title: '',
                tagline: ''
            },
            navbar: {
                menu: {
                    id: '',
                    modalId: '',
                    label: ''
                }
                search: {
                    id: '',
                    modalId: '',
                    label: ''
                }
            }
        },
        tools: {
            links: {
                items: [
                    { voir links }
                ]
            },
            search: {
                id: '',
                modalId: '', // identique à header.body.brand.navbar.search.modalId
                sample: '',
            }
        },
    }
    menu: {
        navigation: {
            modalId: '', // identique à header.body.brand.navbar.menu.modalId
            + voir composant navigation
        },
        tools: {
            links: [],
            duplicateLinks: false
        }
    }
}
%>
<% eval(include('../../../../core/index.ejs')); %>
<% let header = locals.header || {menu: {}};
if (header.menu.tools.duplicateLinks) header.menu.tools.links = header.body.tools.links;
%>

<header role="banner" class="<%= prefix %>-header">

    <%- include('./body', {body: header.body});%>

    <% if ((header.menu.navigation && header.body.brand.navbar) || (header.body.tools && header.body.tools.links)) { %>
        <%- include('./menu', {menu: header.menu});%>
    <% } %>

</header>
