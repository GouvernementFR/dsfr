<%
let data = {};
let header = locals.header || {};
const navbar = {};
let hasNavbar = false;
let hasMenu = false;

data.brand = { logo: header.logo };

if (header.operator !== undefined) {
  data.brand.operator = imgData(header.operator.src, true, header.operator.style)
}

let servicePlaceholder = {
    title:'Nom du site / service',
    tagline: 'baseline - précisions sur l‘organisation'
};

switch (typeof header.service) {
    case 'boolean':
        data.brand.service = servicePlaceholder;
        break;

    case 'string':
        switch(header.service) {
            case 'title':
                data.brand.service = { title: servicePlaceholder.title };
              break
        }
        break;
}

if (header.links !== undefined || header.search) {
    hasNavbar = true;
    data.tools = {};

    if (header.links === true) {
        hasMenu = true;
        data.tools.links = {
            items: [
                {
                    icon: 'add-circle-line',
                    href: '#',
                    label: 'Créer un espace'
                },
                {
                    icon: 'lock-line',
                    href: '#',
                    label: 'Se connecter'
                },
                {
                    icon: 'account-line',
                    href: '#',
                    label: 'S’enregistrer'
                }
            ]
        };
    }
    else if (header.links !== undefined) {
        hasMenu = true;
        data.tools.links = header.links;
    }

    if (header.search) {
        data.tools.search = header.search === true ?
        {
            sample: '../../../search/example/sample/search-default'
        }
        : header.search;
        data.tools.search.id = header.searchId || uniqueId('search');

        navbar.search = {
            modalId: uniqueId('modal'),
            id: uniqueId('button')
        }
        data.tools.id = uniqueId('tools');
    }

}

switch (true) {
    case header.navigation === 'min':
        data.navigation = {
            sample: '../../../navigation/example/sample/navigation-min'
        };
        break;

    case header.navigation === true:
        data.navigation = {
            sample: '../../../navigation/example/sample/navigation'
        };
        break;

    case typeof header.navigation === 'object':
        data.navigation = header.navigation;
        break;
}

if (data.navigation) {
    data.navigation.id = header.navigationId || uniqueId('navigation');
    hasMenu = true;
}

if (hasMenu) {
  hasNavbar = true;
  navbar.menu = {
      modalId: uniqueId('modal'),
      id: uniqueId('button')
  }
}

if (hasNavbar) data.navbar = navbar;

%>

<%- include('../../template/ejs/header', {header: data}); %>
