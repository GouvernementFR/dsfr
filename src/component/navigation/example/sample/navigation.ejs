<%
let navigation = locals.navigation || {};
const href = navigation.href || '#'

const getLink = (icon, iconPlace) => {
  const id = uniqueId('nav');
  return {
    type: 'link',
    label: `accès direct ${id}`,
    id: id,
    href: href,
    icon: icon,
    iconPlace: iconPlace
  };
}

const getSubLink = (active = false, icon, iconPlace) => {
  const id = uniqueId('nav');
  return {
    label: `Lien de navigation ${id}`,
    id: id,
    href: href,
    active: active,
    icon: icon,
    iconPlace: iconPlace
  }
}

const getItems = (active = false) => {
  return [
    getSubLink(),
    getSubLink(false, 'arrow-right-line', 'right'),
    getSubLink(active),
    getSubLink(),
    getSubLink(),
    getSubLink(false, 'arrow-left-line'),
    getSubLink(),
    getSubLink()
  ];
}

const getMenu = (active = false) => {
  return {
    id: uniqueId('menu'),
    collapseId: uniqueId('collapse'),
    type: 'menu',
    label: 'Entrée menu',
    items: getItems(active),
    active: active
  }
}

const getCategory = (active = false, icon, iconPlace) => {
  return {
    id: uniqueId('category'),
    label: 'Nom de catégorie',
    href: href,
    items: getItems(active),
    icon: icon,
    iconPlace: iconPlace
  };
}

const getMega = (active = false, leader = false) => {

  return {
    id: uniqueId('mega-menu'),
    collapseId: uniqueId('collapse'),
    type: 'mega-menu',
    label: 'Entrée mega menu',
    close: 'Fermer le menu',
    ...(leader && {leader: {
      title: 'Titre éditorialisé',
      text: lorem(),
      link: {
        id: uniqueId('link'),
        label: 'Voir toute la rubrique',
        iconPlace:'right',
        icon: 'arrow-right-line'
      }
  }}),
    categories: [
      getCategory(),
      getCategory(false, 'arrow-left-line'),
      getCategory(true),
      getCategory(false,'arrow-right-line', 'right')
    ]
  }
}

let data = {
  id: navigation.id || uniqueId('navigation'),
  items: navigation.min === true ?
    [getLink(), getLink(), getLink(), getLink()] :
    [
        getMenu(),
        getMega(),
        getLink('arrow-left-line'),
        getMenu(true),
        getMega(false, true),
        getLink('arrow-right-line', 'right'),
        getMega(true, false),
        getMenu()
    ]
}
%>

<%- include('../../template/ejs/navigation.ejs', {navigation:data}); %>
