    <div class="<%= prefix %>-mega-menu__leader" >
        <%
        if (leader.title !== undefined) {
        %>
            <h4 class="<%= prefix %>-h4 <%= prefix %>-mb-2v"><%= leader.title %></h4>
        <% } %>

        <p class="<%= prefix %>-hidden <%= prefix %>-displayed-lg"><%- leader.text %></p>

        <%
        if (leader.link !== undefined) {
        %>
            <%- include('../../../links/example/samples/link-default', { ...leader.link, alignOnContent: true}); %>
        <% } %>
    </div>
</div>
