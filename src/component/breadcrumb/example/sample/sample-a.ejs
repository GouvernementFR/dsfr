<%
  const breadcrumb = locals.breadcrumb || {};
  const getData = (label, href) => {
    return {
      id: uniqueId('breadcrumb'),
      href: href,
      label: label,
      markup: breadcrumb.markup
    };
  }

  const getSegmentData = (id) => {
    return getData(`Segment ${id}: lorem ipsum`, '../');
  }

  const segments = [];
  segments.push(getData('Accueil', '../'));
  for (let i = 1; i <= 7; i++) segments.push(getSegmentData(i));
  segments.push({ label: 'Page Actuelle'});


  const data = {
  id: uniqueId('breadcrumb'),
  segments: segments,
  ...breadcrumb
}
%>

<%- include('../../template/ejs/breadcrumb.ejs', {breadcrumb: data}); %>
