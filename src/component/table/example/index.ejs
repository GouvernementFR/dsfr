
<%
const sample = getSample(include);

const dataSimple = JSON.parse(include('./data/data-simple.json.ejs'));

%>

<%-
    sample(getText('sample.simple', 'table'), './sample/table-default', {table: {table: {caption: getText('data.caption', 'table'), ...dataSimple}}}, true);
%>

<%-
    sample(getText('sample.sm', 'table'), './sample/table-default', {table: {classes: [`${prefix}-table--sm`], table: {caption: getText('data.caption', 'table'), ...dataSimple}}}, true);
%>

<%-
    sample(getText('sample.lg', 'table'), './sample/table-default', {table: {classes: [`${prefix}-table--lg`], table: {caption: getText('data.caption', 'table'), ...dataSimple}}}, true);
%>

<%-
    sample(getText('sample.complex', 'table'), './sample/table-complex', {table: {header: true, footer: true, table: {caption: getText('data.caption', 'table'), rows: [{selected: true}, {expandable: 'true'}, {collapse: true}, {}, {expandable: 'false'}, {collapse: true}]}}}, true);
%>

