<%
let checkbox = locals.checkbox || {}
let checkboxAttrs = checkbox.attributes || {};
let describedby = [];
if (checkbox.error !== undefined) describedby.push('checkboxes-error-desc-error');
if (checkbox.valid !== undefined) describedby.push('checkboxes-valid-desc-valid');
if (describedby.length > 0) checkboxAttrs['aria-describedby'] = describedby.join(' ');
let element = {
  path: 'checkbox/example/sample/checkbox',
    data: {...checkbox, ...checkbox.element} || {}
}
let data = JSON.parse(include('../../../form/example/sample/data', {form: checkbox}));


let fields = {
    choice: true,
    elements: [
        { ...element, data: {checkbox: { attributes: {...checkboxAttrs}, id: checkbox.id + '-1' } } },
        { ...element, data: {checkbox: { attributes: {...checkboxAttrs}, id: checkbox.id + '-2', checked: true } } },
        { ...element, data: {checkbox: { attributes: {...checkboxAttrs}, id: checkbox.id + '-3' } } },
    ],
    ...checkbox,
    ...data,

}
%>

<%- include('../../../form/example/sample/fieldset', {fieldset: fields}) %>
