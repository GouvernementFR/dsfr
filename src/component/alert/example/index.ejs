const sample = getSample(include);
%>

<%- section(null, 'Précisez le type d\'alerte (Information/Succès/Erreur) dans le titre ou, à défaut, dans le contenu de l\'alerte. <br> Le titre est défini par la classe "fr-alert__title", la balise &#60;p&#62; peut être remplacée par un niveau de titre hx suivant le contexte. <br>Ajouter l\'attribut role="alert" lorsque les alertes sont ajoutées dynamiquement dans le DOM (en js après le chargement de la page)', 0); %>

<%- sample('Alerte par défaut', './sample/alert-default', {}, true); %>

<%- sample('Alerte succès', './sample/alert-default', {alert: {type: "success", title: "Succès de l'envoi"}}, true); %>

<%- sample('Alerte erreur', './sample/alert-default', {alert: {type: "error", title: "Erreur détectée dans le formulaire"}}, true); %>

<%- sample('Alerte info', './sample/alert-default', {alert: {type: "info", title: "Information Covid"}}, true); %>

<%- sample('Alerte attention', './sample/alert-default', {alert: {type: "warning", title: "Attention"}}, true); %>

<%- sample('Alerte avec bouton fermer', './sample/alert-dismissable', {alert: {type: "info", title: "Information Covid"}}, true); %>

<%- sample('Alerte taille SM', './sample/alert-default', {alert: {title:false, size: "sm", type: "info", text: "Information : titre de l'information"}}, true); %>

<%- sample('Alerte taille SM refermable', './sample/alert-dismissable', {alert: {title:false, size: "sm", type: "info", text: "Information : cliquer sur la croix pour fermer l'alerte"}}, true); %>

<%- sample('Alerte icône personnalisée', './sample/alert-default', {alert: {classes: ['fr-fi-lock-fill']}}, true); %>

<%- sample('Bouton qui ajoute une alerte d\'erreur dynamique', '../../button/example/sample/button-default', {button: {id: 'btn-pop-error', label: 'click me', attributes: {onclick:"const alert = document.getElementById('alert-error').cloneNode(true); alert.id = 'alert-2'; const btn = alert.querySelector('button'); btn.setAttribute('aria-controls', 'alert-2'); btn.setAttribute('onclick', 'this.parentNode.parentNode.remove(); document.getElementById(&quot;btn-pop-error&quot;).focus();'); this.after(alert); btn.focus();"}}}, true); %>

<%- sample('Bouton qui ajoute une alerte d\'info dynamique', '../../button/example/sample/button-default', {button: {id: 'btn-pop-info', label: 'click me', attributes: {onclick:"const alert = document.getElementById('alert-info').cloneNode(true); alert.id = 'alert-3'; const btn = alert.querySelector('button'); btn.setAttribute('aria-controls', 'alert-3'); btn.setAttribute('onclick', 'this.parentNode.parentNode.remove(); document.getElementById(&quot;btn-pop-info&quot;).focus();'); this.after(alert); btn.focus();"}}}, true); %>

<%- sample('Bouton qui ajoute une alerte d\'erreur dynamique en haut de la page', '../../button/example/sample/button-default', {button: {id: 'btn-pop-error-up', label: 'click me', attributes: {onclick:"const alert = document.getElementById('alert-error').cloneNode(true); alert.id = 'alert-4'; const btn = alert.querySelector('button'); btn.setAttribute('aria-controls', 'alert-4'); btn.setAttribute('onclick', 'this.parentNode.parentNode.remove(); document.getElementById(&quot;btn-pop-error-up&quot;).focus();'); document.body.prepend(alert); btn.focus();"}}}, true); %>
