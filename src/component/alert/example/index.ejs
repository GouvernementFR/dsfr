<%- sample('Alerte par défaut', './sample/alert-default', {}, true); %>

<%- sample('Alerte info', './sample/alert-default', {type: "info", title: "Information Covid"}, true); %>

<%- sample('Alerte succès', './sample/alert-default', {type: "success", title: "Succès de l'envoi"}, true); %>

<%- sample('Alerte erreur', './sample/alert-default', {type: "error", title: "Erreur détectée dans le formulaire"}, true); %>

