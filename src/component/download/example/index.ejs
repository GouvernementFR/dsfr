<%
const sample = getSample(include);
const elements = [
  {
    title: 'Lien de téléchargement',
    path: 'sample-default'
  },
  {
    title: 'Groupe de liens',
    path: 'sample-group-link'
  },
  {
    title: 'Carte de téléchargement',
    path: 'sample-card'
  },
  {
    title: 'Groupe de cartes',
    path: 'sample-card-group'
  },
  {
    title: 'Fichier en langue étrangère',
    path: 'sample-lang'
  },
  {
    title: 'Utilitaire js',
    path: 'sample-assess-js'
  },
];

const accordions = [];
for (let element of elements) {
  accordions.push({
    label: element.title,
    id: uniqueId('download'),
    content: include(`./sample/${element.path}`)
  })
}
const data = {
  accordions: accordions
}
%>

