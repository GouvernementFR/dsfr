<%
const inputs = locals.inputs || {};
const input = locals.input || {};
const jsonData = JSON.parse(include('../../../form/example/sample/data', { form: inputs }));

const id = inputs.id;
const elements = [];
for (let i = 1; i < 4; i++) elements.push({
    path: 'input/example/sample/input-text',
    data: {
        input: {
            ...input,
            id: `${id}-${i}`
        }
    }
});

const fields = {
    elements: elements,
    ...inputs,
    ...jsonData
}
%>

<%- include('../../../form/example/sample/fieldset', {fieldset: fields}) %>
