<%
    let input = locals.input || {}
    let data = JSON.parse(include('../../../form/example/sample/data'));
    data = {...input, ...data};
    data.type = input.type || 'text';
    data.label = input.label || 'Label champs de saisie';
    data.addon = true;
    data.button = input.button || {label:'Envoyer', type: 'submit'};
%>
<% if (input.group === true) { %>
<%- include('../../template/ejs/input-group', {input:data}); %>
<% }
else { %>
<%- include('../../template/ejs/input', {input:data}); %>
<% } %>
