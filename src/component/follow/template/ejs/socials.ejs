<%#
# paramètres socials

* socials.title (string, required) : titre du bloc réseaux sociaux

* socials.networks (array, required) : Tableau de réseaux sociaux
  ** label (string, required) : nom du réseau social
  ** url (string, required) : adresse url du réseau social

%>
<% eval(include('../../../../core/index.ejs'));

let socials = locals.socials || {networks: []};
let socialsClasses = [prefix + '-follow__social'];

%>

<div <%- includeClasses(socialsClasses); %> >
  <p class="<%= prefix %>-h5 <%= prefix %>-mb-3v <%= prefix %>-mb-3v"><%- socials.title %></p>
  <ul class="<%= prefix %>-links-group <%= prefix %>-links-group--lg">
    <% for (let i=0; i < socials.networks.length; i++) { %>
      <li>
        <%- include('../../../link/template/ejs/link', { link: {attributes: {title: contentPlaceholder("XXXXXXX") + " - ouvre une nouvelle fenêtre"}, href: socials.networks[i].url, blank: true, label: socials.networks[i].label, classes: [prefix + '-link--' + socials.networks[i].label] }}); %>
      </li>
    <% } %>
  </ul>
</div>
