<%
let upload = locals.upload || {};
const fieldset = {
  id: upload.id || uniqueId('upload'),
  disabled: upload.disabled,
  label: getText('label.default', 'upload'),
  elements: [{
    type: 'upload',
    data: {
      id: upload.id + '-input',
      name: upload.id,
      label: getText('label.default', 'upload'),
      hint: getText('hint.default', 'upload'),
    }
  }]
};

if (upload.error) fieldset.error = getText('error.default', 'upload');
%>

<%- include('../../../form/template/ejs/fieldset/fieldset', {fieldset:fieldset}); %>
