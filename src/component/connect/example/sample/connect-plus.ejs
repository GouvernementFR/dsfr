<%
const connect = locals.connect || {};
const getLink = () => {
  if (!hasText('plus.link', 'connect') || !hasText('plus.href', 'connect')) return null;
  return {
    label: getText('plus.link', 'connect'),
    href: getText('plus.href', 'connect')
  }
};

const data = {
  ...locals.connect,
  type: 'plus',
  brand: getText('plus.brand', 'connect', true),
  link: connect.link || getLink(connect.link)
}

%>
<%- include('connect-default.ejs', {connect: data}) %>
