<%- sample('Bouton FranceConnect en Allemand', './sample/connect-default', {connect: {lang: 'de'}}, true); %>

<%- sample('Bouton FranceConnect en Espagnol', './sample/connect-default', {connect: {lang: 'es'}}, true); %>

<%
const options = ['red-marianne', 'info', 'success', 'warning', 'error', 'green-tilleul-verveine', 'green-bourgeon', 'green-emeraude', 'green-menthe', 'green-archipel', 'blue-ecume', 'blue-cumulus', 'purple-glycine', 'pink-macaron', 'pink-tuile',  'yellow-tournesol', 'yellow-moutarde', 'orange-terre-battue', 'brown-cafe-creme', 'brown-caramel', 'brown-opera', 'beige-gris-galet' ];

%>

<link href="../../../dist/component/select/select.main.css" rel="stylesheet" file="main">

<div class="fr-select-group">
    <label class="fr-label" for="select">Label pour liste d√©roulante
    </label>
    <select class="fr-select" id="select" name="select">
        <option value="blue-france" selected>blue-france</option>
        <%
        for (const option of options) {
        %>
        <option value="<%= option %>"><%= option %></option>
        <%
        }
        %>
    </select>
</div>

<div class="fr-form-group">
    <fieldset class="fr-fieldset fr-fieldset--inline">
        <legend class="fr-fieldset__legend fr-text--regular" id='radio-inline-legend'>
        </legend>
        <div class="fr-fieldset__content">
            <div class="fr-radio-group">
                <input checked type="radio" id="low" name="radio-inline">
                <label class="fr-label" for="low">Action Low
                </label>
            </div>
            <div class="fr-radio-group">
                <input type="radio" id="high" name="radio-inline">
                <label class="fr-label" for="high">Action High
                </label>
            </div>
        </div>
    </fieldset>
</div>

<%- sample('Bouton AgentConnect', './sample/connect-default', {connect: {type: 'agent'}}, true); %>

<script>
  const agent = document.getElementsByClassName('fr-connect--agent')[0];
  const select = document.getElementsByTagName('select')[0];
  const low = document.getElementById('low');
  const high = document.getElementById('high');
  const change = (e) => {
    const tint = select.selectedOptions[0].value;
    agent.style.backgroundColor = `var(--background-action-${high.checked ? 'high' : 'low'}-${tint})`;
    agent.style.color = `var(--text-${high.checked ? 'inverted' : 'action-high'}-${tint})`;
  }

  select.addEventListener('change', change);
  low.addEventListener('change', change);
  high.addEventListener('change', change);

  change();

</script>
