<%#
# paramètres tooltip

* tooltip.id (string, required) : Identifiant du composant (lie le bouton au collapse).

* tooltip.content (string, optional) : contenu du composant

* tooltip.isExpanded (boolean, optional) [default: false] : le composant est-il ouvert au départ.

#%>

<% eval(include('../../../../core/index.ejs')); %>

<%
const tooltip = locals.tooltip || {};
%>

<button class="<%= prefix %>-btn <%= prefix %>-btn--tooltip" aria-describedby="<%= tooltip.id %>"></button>
<span class="<%= prefix %>-tooltip <%= prefix %>-tooltip--opened" id="<%= tooltip.id %>"><%- tooltip.content %></span>
