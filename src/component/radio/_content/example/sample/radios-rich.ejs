<%
const radios = locals.radios || {}
const radio = locals.radio || {};
const jsonData = JSON.parse(include('../../../form/example/sample/data', { form: radios }));

const id = radios.id;
const elements = [];
for (let i = 1; i < 4; i++) elements.push({
  path: 'radio/example/sample/radio-rich',
  data: {
    radio: {
      ...radio,
      id: `${id}-${i}`,
      name: id,
      rich: true,
      checked: i === 2 && radios.checked
    }
  }
});

const fields = {
  choice: true,
  elements: elements,
  ...radios,
  ...jsonData
}
%>

<%- include('../../../form/example/sample/fieldset', {fieldset: fields}) %>
