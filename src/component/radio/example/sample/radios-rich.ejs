<%
let radio = locals.radio || {}
let data = JSON.parse(include('../../../form/example/sample/data', {form:radio}));
data = {...radio, ...data};
let element = {
  path: 'radio/example/sample/radio-rich',
  data: {...radio, ...radio.element} || {}
}

element.data.name = radio.id;
element.data.rich = true;

let fields = {
    elements: [
        { ...element, data: { radio: {...element.data, id: radio.id + '-1' } } },
        { ...element, data: { radio: {...element.data, id: radio.id + '-2' } } },
        { ...element, data: { radio: {...element.data, id: radio.id + '-3' } } },
    ],
    ...data
}
%>

<%- include('../../../form/example/sample/fieldset', {fieldset: fields}) %>
