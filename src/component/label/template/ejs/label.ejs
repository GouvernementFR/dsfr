<%#
# paramètres label

* label (string, required) : contenu texte

* href (string, required) : adresse url du lien

* blank (bool, optional) : si true, target prend la valeur _blank, sinon _self

* icon (string, optional) : icon du lien

* iconPlace (string, optionnal) : emplacement de l'icone
  si non défini alors que le paramètre icon est défini, bouton avec icone seule, sans label
  valeurs :
  * left : icone à gauche du label
  * right : icone à droite du label

%>
<% eval(include('../../../../core/index.ejs')); %>

<%
 let labelClasses = locals.classes || [];
 let labelAttrs = locals.attributes || {};

 labelClasses.push(prefix + '-label');


 switch(locals.size) {
     case 'sm':
         labelClasses.push(prefix + '-label--sm');
       break;
 }

 if (locals.icon !== undefined) labelClasses.push(prefix + '-fi-' + locals.icon);

//  if (locals.iconPlace !== undefined) switch(locals.iconPlace)
//  {

//      case 'left':
//          labelClasses.push(prefix + '-label--icon-left');
//          break;

//      case 'right':
//          labelClasses.push(prefix + '-label--icon-right');
//          break;

//  }

if (locals.disabled === true) {
  if (locals.button) labelAttrs['disabled'] = '';
} else if (locals.clickable) {
    labelAttrs.href = locals.href || '[url - à modifier]';
  switch (true) {
    case locals.blank:
    labelAttrs.target = '_blank';
    break;
    case locals.self:
    labelAttrs.target = '_self';
    break;
  }
}

 %>

<% if(locals.group) { %>
    <ul class="<%= prefix %>-labels-group">
    <% for (let i = 0; i < 9; i++) { %>
        <li>
            <% if(locals.clickable) { %>
                <a <%- includeClasses(labelClasses)%> <%- includeAttrs(labelAttrs); %>><%- label %></a>
            <% } else { %>
                <p <%- includeClasses(labelClasses)%>><%- label %></p>
            <% } %>
        </li>
    <% } %>
    </ul>
<% } else { %>
    <% if(locals.clickable) { %>
        <a <%- includeClasses(labelClasses)%> <%- includeAttrs(labelAttrs); %>><%- label %></a>
    <% } else if (locals.button) { %>
        <button <%- includeClasses(labelClasses)%> <%- includeAttrs(labelAttrs); %>><%- label %></button>
    <% } else { %>
        <p <%- includeClasses(labelClasses)%>><%- label %></p>
    <% } %>
<% } %>
