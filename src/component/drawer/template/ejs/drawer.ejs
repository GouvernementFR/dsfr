%>
<% eval(include('../../../../core/index.ejs')); %>

<%
  const drawer = locals.drawer || {};
  const drawerClasses = [`${prefix}-drawer`];
  const drawerAttrs = drawer.attributes || {};
  drawerAttrs.id = drawer.id;

  if (drawer.position) drawerClasses.push(`${prefix}-drawer--${drawer.position}`);
  if (drawer.sticky) drawerClasses.push(`${prefix}-drawer--sticky`);

  const titleMarkup = drawer.titleMarkup || 'h2';
  const collapse = drawer.collapse || {};
  const collapseAttrs = collapse.attributes || {};
  collapseAttrs.id = collapse.id;
%>

<div <%- includeClasses(drawerClasses) %> <%- includeAttrs(drawerAttrs); %>>
  <div class="<%=prefix%>-collapse" <%- includeAttrs(collapseAttrs) %>>
    <div class="<%=prefix%>-drawer__body">
      <div class="<%=prefix%>-drawer__header">
        <<%=titleMarkup%> class="<%=prefix%>-drawer__title">
          <%=drawer.title%>
        </<%=titleMarkup%>>
        <button class="<%=prefix%>-btn <%=prefix%>-btn--close" aria-controls="<%=collapse.id%>" aria-expanded="<%=collapse.opened%>">Fermer le panneau</button>
      </div>
      <div class="<%=prefix%>-drawer__content">
        <%-drawer.content%>
      </div>
    </div>
  </div>
</div>
