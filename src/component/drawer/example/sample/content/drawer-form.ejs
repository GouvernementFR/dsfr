<%
const radios = locals.radios || {}
const radio = locals.radio || {};
radio.label = getText('label', 'form') + ' ' + getText('title', 'radio').toLowerCase();

const id = uniqueId('radio');
const elements = [];
for (let i = 1; i < 4; i++) elements.push({
  type: 'radio',
  inline: radios.inline || null,
  data: {
    ...radio,
    id: `${id}-${i}`,
    name: id,
    value: i,
    checked: i === 2 && radios.checked
  }
});

const fieldset = {
  ...radios,
  choice: true,
  elements: elements,
  id: uniqueId('fieldset')
}

%>

<div class="<%=prefix%>-container">
  <%- include('../../../../form/example/sample/fieldset', {fieldset: fieldset}) %>
</div>
