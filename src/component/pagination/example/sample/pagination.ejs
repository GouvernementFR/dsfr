<%
    let pagination = locals.pagination || {};
    let pages = [];
    let i;

    for (i = 1; i < 4; i++) pages.push({label:i, title:'Page ' + i, href:'#', displayedLg: i > 2});
    pages.push({label:'…', displayedLg:true});
    for (i = 130; i < 133; i++) pages.push({label:i, title:'Page ' + i, href:'#', displayedLg: i < 132});

    if (pagination.index !== undefined) pages[pagination.index].active = true;

    let data = {
        first: { label: 'Première page', href:'#' },
        prev: { label: 'Page précédente', href:'#', hasLgLabel: true },
        next: { label: 'Page suivante', href:'#', hasLgLabel: true },
        last: { label: 'Dernière page', href:'#' },
        pages : pages
    }
%>

<%- include('../../template/ejs/pagination', {pagination: data}); %>
