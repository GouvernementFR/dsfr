<%#
# paramètres message

* message.id (string, required) : id du fieldset référencé

* message.error (string, optional): message d'erreur

* message.valid (string, optional): message de succès

%>
<% eval(include('../../../../core/index.ejs')); %>
<%
let message = locals.message || {}
%>
<% if(message.error != undefined && typeof message.error != 'boolean') { %>
  <% if(typeof message.error == 'object' && message.error.length > 0) { %>
    <p id="<%= message.id %>-desc-error" class="<%= prefix %>-hint-text" >
      <% for (let i = 0; i < message.error.length; i++) { %>
        <span class="<%= prefix %>-error-text"><%= message.error[i].label %></span>
      <% } %>
    </p>
  <% } else { %>
    <p id="<%= message.id %>-desc-error" class="<%= prefix %>-error-text" >
      <%= message.error %>
    </p>
  <% } %>
<% } %>

<% if(message.valid != undefined && typeof message.valid === 'string') { %>
  <p id="<%= message.id %>-desc-valid" class="<%= prefix %>-valid-text" >
    <%= message.valid %>
  </p>
<% } %>
