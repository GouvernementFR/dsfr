<% const sample = getSample(include); %>

<div class="<%= prefix %>-container" >
  <div class="<%= prefix%>-grid-row <%= prefix%>-grid-row--gutters">
    <div class="<%= prefix%>-col-12 <%= prefix%>-col-md-4">
      <%- sample('Carte', '../../../component/card/example/sample/card-default', { card : { img: true }}); %>
    </div>

    <div class="<%= prefix%>-col-12 <%= prefix%>-col-md-4">
      <%- sample('Carte avec bouton', '../../../component/card/example/sample/card-default', { card : { img: true, footer: {buttons: true} }}); %>
    </div>

    <div class="<%= prefix%>-col-12 <%= prefix%>-col-md-4">
      <%- sample('Carte avec tag', '../../../component/card/example/sample/card-default', { card : { img: true, enlarge: false, content: { tags: true, details: ['icon', 'end-icon'] } }}); %>
    </div>
  </div>
</div>
