<%
let favicon = locals.favicon || {};
const path = favicon.path || '' %>


<meta name="theme-color" content="#000091"><!-- Défini la couleur de thème du navigateur (Safari/Android) -->

<link rel="apple-touch-icon" href="<%= path %>apple-touch-icon.png"><!-- 180×180 -->

<link rel="icon" href="<%= path %>favicon.svg" type="image/svg+xml">

<!-- si favicon.ico peut etre placé à la racine du serveur, retirer la ligne ci-dessous -->
<link rel="shortcut icon" href="<%= path %>favicon.ico" type="image/x-icon"><!-- 32×32 -->

<link rel="manifest" href="<%= path %>manifest.webmanifest" crossorigin="use-credentials">
