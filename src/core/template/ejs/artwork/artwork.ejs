<%#
# paramÃ¨tres artwork

* artwork.name (string, required): nom de l'artwork

* artwork.size (string, optional) [default: 'md']: taille de l'artwork (sm|md|lg)

* artwork.accent (string, optional): couleur d'accentuation (ex: green-emeraude)

%>
<% eval(include('../../../index.ejs')); %>
<%
let artwork = locals.artwork || {} ;
let size = "";
let classes = locals.classes || [];
classes.push(prefix + '-artwork');
if (artwork.accent) classes.push(prefix + '-artwork--' + artwork.accent);
%>

<% switch(artwork.size) {
  case 'sm':
    size = 'viewBox="0 0 40 40" width="40px" height="40px"';
    break;
  case 'lg':
    size = 'viewBox="0 0 120 120" width="120px" height="120px"';
    break;
  default:
    size = 'viewBox="0 0 80 80" width="80px" height="80px"';
    break;
} %>

<svg <%- includeClasses(classes) %> <%- size %>>
  <use class="<%= prefix %>-artwork-decorative" xlink:href="<%= relativeRoot %>dist/artwork/<%= artwork.name %>.svg#artwork-decorative"></use>
  <use class="<%= prefix %>-artwork-minor" xlink:href="<%= relativeRoot %>dist/artwork/<%= artwork.name %>.svg#artwork-minor"></use>
  <use class="<%= prefix %>-artwork-major" xlink:href="<%= relativeRoot %>dist/artwork/<%= artwork.name %>.svg#artwork-major"></use>
</svg>
