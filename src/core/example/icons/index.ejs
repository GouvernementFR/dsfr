<%
    let statusCollections,
        actionNavigationCollections,
        contentMediaCollections,
        pdfCollections;

    statusCollections = [
        ['alert-fill', 'alert-line', 'question-fill', 'question-line', 'information-fill', 'information-line', 'error-warning-fill', 'error-warning-line'],
        ['close-line', 'check-line', 'checkbox-circle-fill', 'checkbox-circle-line', 'close-circle-fill', 'close-circle-line']
    ];
    navigationCollections = [
        ['menu-fill', 'menu-2-fill'],
        ['arrow-up-line', 'arrow-right-line', 'arrow-down-line', 'arrow-left-line', 'arrow-up-s-line', 'arrow-right-s-line', 'arrow-down-s-line', 'arrow-left-s-line'],
        ['user-fill', 'user-line', 'account-fill', 'account-line', 'lock-fill', 'lock-line']
    ];
    actionCollections = [
        ['search-fill', 'search-line'],
        ['eye-line', 'eye-off-line'],
        ['printer-fill', 'printer-line', 'file-download-fill', 'file-download-line', 'download-line', 'external-link-line', 'edit-fill', 'edit-line', 'links-fill'],
        ['delete-line', 'delete-fill'],
        ['save-fill', 'save-line'],
        ['calendar-fill', 'calendar-line'],
        ['file-fill', 'file-line'],
        ['mail-fill', 'mail-line']
    ];
    contentMediaCollections = [
        ['play-fill', 'play-line', 'volume-up-fill', 'volume-up-line', 'volume-mute-fill', 'volume-mute-line', 'volume-down-fill', 'volume-down-line', 'pause-circle-fill', 'pause-circle-line'],
        ['file-pdf-fill', 'file-pdf-line']
    ];
    socialsCollections = [
        ['instagram-fill', 'facebook-circle-fill', 'facebook-circle-line', 'linkedin-box-fill', 'linkedin-box-line', 'twitter-fill', 'youtube-fill']
    ];

    const families = [
        { title : 'Statuts (Icon font / SVG symbols)', collections: statusCollections},
        { title : 'Navigation (Icon font / SVG symbols)', collections: navigationCollections},
        { title : 'Actions (Icon font / SVG symbols)', collections: actionCollections},
        { title : 'Contenus et médias (Icon font / SVG symbols)', collections: contentMediaCollections},
        { title : 'Réseaux Sociaux (Icon font / SVG symbols)', collections: socialsCollections}
    ];

    const sample = getSample(include);
%>

<%
    for (const family of families) {
%>
    <h4 class="<%= prefix %>-h4 <%= prefix %>-mb-12v"><%= family.title %></h4>

    <%
        family.collections.forEach((collection) => {
    %>
    <div>
        <%- sample('', './samples/icons', { icons: collection }, true); %>
    </div>
    <% }); %>

<% } %>

