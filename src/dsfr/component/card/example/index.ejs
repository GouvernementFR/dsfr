    {
      title: 'Tailles',
      path: 'sample-sizes'
    },
    {
      title: 'Icône',
      path: 'sample-icon'
    },
    {
      title: 'Variations',
      path: 'sample-variations'
    },
    {
      title: 'Markup button',
      path: 'sample-button'
    },
    {
      title: 'Sans image',
      path: 'sample-no-img'
    },
    {
      title: 'Image et ratio',
      path: 'sample-img'
    },
    {
      title: 'En-tête',
      path: 'sample-header'
    },
    {
      title: 'Contenu',
      path: 'sample-content'
    },
    {
      title: 'Sans lien',
      path: 'sample-no-link'
    },
    {
      title: 'Sans lien étendu',
      path: 'sample-enlarge'
    },
    {
      title: 'Desactivée',
      path: 'sample-disabled'
    },
    {
      title: 'Zone d\'action',
      path: 'sample-footer'
    },
    {
      title: 'Carte horizontale',
      path: 'sample-horizontal'
    },
    {
