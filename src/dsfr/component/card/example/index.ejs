      path: 'sample-grid'
    },
    {
      title: 'Grille de cartes horizontales',
      path: 'sample-grid-horizontal'
    },
  ];

  const accordions = [];

  for (let element of elements) {
    accordions.push({
      label: element.title,
      id: uniqueId('card'),
      content: include(`./sample/${element.path}`)
    });
  }

  const data = {
    accordions: accordions
  }
 %>

