<%#
# paramètres email

email (object, required) : objet contenant les paramètres du champ email (voir composant input)

* email.id (string, required) : id du champ

* email.label (string, optional) : libellé du champ

* email.hint (string, optional) : texte alternatif du champ

* email.placeholder (string, optional) : placeholder du champ

* email.error (string, optional) : message d'erreur sous le champ

* email.autocomplete (string, optional) : attribut autocomplete du champ

%>
<% eval(include('../../../../../core/index.ejs')); %>

<%
const email = locals.email || {};

const data = {
  ...email,
  id: email.id || uniqueId('email'),
  attributes: {...email.attributes},
  type: 'email',
}

if (email.autocomplete) data.attributes.autocomplete = 'email';
%>

<%- include('../../../input-base/template/ejs/input-group', {input:data}); %>
