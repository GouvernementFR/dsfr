<%
const page = locals.page;
const buttons = [];

buttons.push({
  label: getText('button.valid', 'register'),
  kind: 1,
  type: 'submit'
});

if (page.stepCount > 1 && page.currentStep !== 1) {
  const previous = {
    label: getText('button.previous', 'register'),
    kind: 2
  };
  buttons.push(previous);
}

const buttonsGroup = {
  type: 'buttonsGroup',
  data: {
    inline: 'sm',
    reverse: true,
    align: 'right',
    classes: [`${prefix}-mt-2v`],
    buttons: buttons
  }
};
%>
<%- JSON.stringify(buttonsGroup); %>
