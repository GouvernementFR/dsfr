const name = { 
    id: uniqueId('with-usage-name-and-surname-disabled'),
    label: getText('name-surname.sample.with-usage-name-and-surname-disabled'),
    items:[
        {
            type: 'input',
            template: 'input-group',
            label: getText('name-surname.label.name'),
            value: 'name'
        },
        {
            type: 'input',
            template: 'input-group',
            label: getText('name-surname.label.usage-name'),
            hint: getText('name-surname.hint.usage-name'),
            value: 'usage-name'
        },
        {
            type: 'input',
            template: 'input-group',
            label: getText('name-surname.label.surname'),
            value: 'surname',
            disabled: true,
        },
        {
            type: 'checkbox',
            template: 'checkbox-group',
            label: getText('name-surname.label.no-surname'),
            value: 'surname-disabled',
            checked: true,
            size: 'sm',
            attributes: {onclick: `const formGroup = this.closest('.fr-form-group'); const surnameFieldset = formGroup && formGroup.previousElementSibling.firstElementChild; if (this.checked) { surnameFieldset.setAttribute('disabled', ''); } else { surnameFieldset.removeAttribute('disabled'); }`},
