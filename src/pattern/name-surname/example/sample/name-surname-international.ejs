<%
const name = { 
    id: uniqueId('name-surname-international'),
    label: getText('name-surname.sample'),
    items:[
        {
            type: 'select',
            template: 'select-group',
            label: getText('name-surname.label.country'),
            placeholder: getText('name-surname.option.placeholder'),
            options: [
                {value:'1', label: getText('name-surname.country.england')},
                {value:'2', label: getText('name-surname.country.france')},
                {value:'3', label: getText('name-surname.country.japan')},
            ]
        },
        {
            type: 'input',
            template: 'input-group',
            label: getText('name-surname.label.name'),
            value: 'name'
        },
        {
            type: 'input',
            template: 'input-group',
            label: getText('name-surname.label.surname'),
            value: 'surname',
        },
        {
            type: 'checkbox',
            template: 'checkbox-group',
            label: getText('name-surname.label.no-surname'),
            value: 'surname-disabled',
            size: 'sm',
            attributes: {onclick: `const formGroup = this.closest('.fr-form-group'); const surnameFieldset = formGroup && formGroup.previousElementSibling.firstElementChild; if (this.checked) { surnameFieldset.setAttribute('disabled', ''); } else { surnameFieldset.removeAttribute('disabled'); }`},
        } 
    ]
}
%>

<%- include('../../template/ejs/name-surname', {name: name}); %>
