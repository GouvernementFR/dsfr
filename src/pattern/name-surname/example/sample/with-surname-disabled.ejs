const name = { 
    id: uniqueId('with-surname-disabled'),
    label: getContent('sample.with-surname-disabled'),
    items:[
        {
            type: 'input',
            label: getContent('name-surname.label.name'),
            value: 'name'
        },
        {
            type: 'input',
            label: getContent('name-surname.label.surname'),
            value: 'surname',
            disabled: true
        },
        {
            type: 'checkbox',
            label: getContent('name-surname.label.no-surname'),
            value: 'surname-disabled',
            checked: true,
            size: 'sm',
            attributes: {onclick: `const formGroup = this.closest('.fr-form-group'); const surnameFieldset = formGroup && formGroup.previousElementSibling.firstElementChild; if (this.checked) { surnameFieldset.setAttribute('disabled', ''); } else { surnameFieldset.removeAttribute('disabled'); }`},
