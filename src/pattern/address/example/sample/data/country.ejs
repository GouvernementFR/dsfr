<%#
  DonnÃ©es d'options de selecteur de pays
  * option.all (array): tableau de tous les pays du monde
    ** option.all[].value : code iso alpha-2 du pays
    ** option.all[].value : Nom du pays dans la langue de la locale

  * option.min (array): tableau de pays - exemple avec 5 pays
%>
<%
const countries = eval(include('../../data/countries.json'));
const options = {min: [], all: []};
for (country of countries) {
  options.all.push(
    {
      value: country.alpha2.toUpperCase(),
      label: country[locals.i18n.locale]
    }
  )
}

const minIds = ['DE', 'ES', 'FR', 'GB', 'IT'];
options.min = options.all.filter((item) => { return minIds.indexOf(item.value) > -1});
%>
<%- JSON.stringify(options); %>