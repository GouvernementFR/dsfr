<%
const sample = getSample(include);
%>
<script type="module">
  <%- include('./js/add-firstname.js'); %>
  <%- include('./js/remove-firstname.js'); %>
  <%- include('./js/toggle-disabled.js'); %>
</script>

<%- section(getText('section.default', 'name'), '', 0); %>

<%- sample(getText('sample.default', 'name'), './sample/name', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.firstname-disabled', 'name')}`, './sample/firstname-disabled', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.married', 'name')}`, './sample/married', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.married', 'name')} + ${getText('sample.firstname-disabled', 'name')}`, './sample/married-and-firstname-disabled', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.button', 'name')}`, './sample/button', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.button', 'name')} + ${getText('sample.firstname-disabled', 'name')}`, './sample/button-and-firstname-disabled', {}, true, '../../example/layout'); %>

<%- section(getText('section.international', 'name'), '', 0); %>

<%- sample(getText('sample.default', 'name'), './sample/international', {}, true, '../../example/layout'); %>

<%- sample(`${getText('sample.with', 'name')} ${getText('sample.firstname-disabled', 'name')}`, './sample/international-and-firstname-disabled', {}, true, '../../example/layout'); %>
