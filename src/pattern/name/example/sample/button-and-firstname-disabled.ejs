<%
const name = {
    id: uniqueId('button-and-firstname-disabled'),
    label: `getText('sample.with', 'name') getText('sample.button', 'name') + getText('sample.firstname-disabled', 'name')`,
    items:[
        {
            type: 'input',
            template: 'input',
            label: getText('label.name', 'name'),
            name: 'name'
        },
        {
            type: 'input',
            template: 'input',
            label: getText('label.firstname', 'name'),
            name: 'firstname',
            disabled: true
        },
        {
            type: 'button',
            template: 'button',
            label: getText('label.add-firstname', 'name'),
            kind: 3,
            size: 'sm',
            disabled: true
        },
        {
            type: 'checkbox',
            template: 'checkbox-group',
            label: getText('label.no-firstname', 'name'),
            name: 'firstname-disabled',
            checked: true,
            size: 'sm',
            attributes: {onclick: `const control = this.closest('.fr-control'); const firstnameControl = control.previousElementSibling.previousElementSibling; const firstnameInput = firstnameControl.querySelector('input');  const button = control.previousElementSibling.firstElementChild; if (this.checked) { firstnameControl.classList.add('fr-control--disabled'); firstnameInput.setAttribute('disabled', ''); button.setAttribute('disabled', ''); } else { firstnameControl.classList.remove('fr-control--disabled'); firstnameInput.removeAttribute('disabled'); button.removeAttribute('disabled'); }`},
        }
    ]
}
%>

<%- include('../../template/ejs/name', {name: name}); %>
