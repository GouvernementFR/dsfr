const name = { 
    id: uniqueId('firstname-disabled'),
    label: getText('sample.firstname-disabled', 'name'),
    items:[
        {
            type: 'input',
            template: 'input-group',
            label: getText('label.name', 'name'),
            value: 'name'
        },
        {
            type: 'input',
            template: 'input-group',
            label: getText('label.firstname', 'name'),
            value: 'firstname',
