<%
 const heading = locals.heading || {};
 const markup = heading.markup || 'h1';
 %>

<div class="<%= prefix %>-container <%= prefix %>-mb-n8v">
  <div class="<%= prefix %>-grid-row <%= prefix %>-grid-row--gutters">
    <div class="<%= prefix %>-col-12 <%= prefix %>-col-offset-lg-2 <%= prefix %>-col-lg-7">
      <% if (heading.title) { %>
        <<%= markup %>><%= heading.title %></<%= markup %>>
      <% } %>
      <hr>
    </div>
  </div>
</div>
