<!doctype html>
<html lang="fr" >
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Erreur serveur</title>
    <style>
      <%- injection['server.standalone.min.css'] || injection['server.standalone.css']  %>
    </style>
</head>
<body>
  <main role="main" id="content">
    <div class="fr-container">
      <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
        <div class="fr-server__body fr-col-12 fr-col-md-6">
          <h1 class="fr-h1"><%= getText('server.title') %></h1>
          <p class="fr-text--xl"><%= getText('server.infos').replace('${site-name}', getText('global.site.name')) %></p>
          <p class="fr-text--sm"><%= getText('server.retry') %></p>

          <%- include(root + 'src/component/button/example/sample/buttons-group.ejs', {
            buttonsGroup: { size: 'sm', inline: true, buttons: [
              {label: '<span aria-hidden="true">' + include(root + 'src/core/icon/logo/facebook-circle-fill.svg') + '</span>' + getText('global.social.facebook'), kind: 3, markup: 'a', href: contentPlaceholder(getText('global.social.facebook.url'))},
              {label: '<span aria-hidden="true">' + include(root + 'src/core/icon/logo/twitter-fill.svg') + '</span>' + getText('global.social.twitter'), kind: 3, markup: 'a', href: contentPlaceholder(getText('global.social.twitter.url'))},
              {label: '<span aria-hidden="true">' + include(root + 'src/core/icon/logo/linkedin-box-fill.svg') + '</span>' + getText('global.social.linkedin'), kind: 3, markup: 'a', href: contentPlaceholder(getText('global.social.linkedin.url'))},
            ] }}); %>
        </div>
        <div class="fr-server__image fr-col-12 fr-col-md-3 fr-col-offset-md-1">
          <%- include(root + 'src/core/template/ejs/media/img.ejs', {
            media: {
              src: imgToBase64('asset/pictogramme-erreur.png'),
              alt: 'unrendered'
            }
          }); %>
        </div>
      </div>
    </div>

    <div class="fr-server__footer">
      <div class="fr-grid-row fr-grid-row--center">
        <img width="66px" height="24px" src="<%- imgToBase64('asset/marianne.png'); %>" alt="<%= getText('global.marianne') %>">
      </div>
    </div>
  </main>
</body>
</html>
