<%#
# paramÃ¨tres response

* title (String, optional): Titre de l'erreur

* subtitle (String, optional) : Sous-titre de l'erreur

* description (String, optional) : Description de l'erreur

* text (String, optional) : Texte de l'erreur

* type (String, required): Type d'erreur [404/500/503]

* contact (Boolean, optional): Option d'affichage du bouton de contact

%>

<%
    const title = locals.title || false;
    const subtitle = locals.subtitle || false;
    const description = locals.description || false;
    const text = locals.text || false;
    const type = locals.type || false;
    const contact = locals.contact || false;
    const contactLink = {
        href: `mailto:${contentPlaceholder('adresse email du contact')}?subject=${contentPlaceholder('objet du mail')}&body=${contentPlaceholder('titre ou texte descriptif de la page')} ${contentPlaceholder('url de la page')}`,
        title: getText('button.contact', 'response'),
        target: '_blank',
    }
%>

<main role="main" id="content">
    <div class="<%= prefix %>-container" >
        <div class="<%= prefix %>-mt-12w <%= prefix %>-mb-10w <%= prefix %>-grid-row <%= prefix %>-grid-row--gutters <%= prefix %>-grid-row--middle">
            <div class="<%= prefix %>-py-0 <%= prefix %>-col-12 <%= prefix %>-col-md-6 <%= prefix %>-col-offset-md-1">
                <% if(locals.title) { %>
                    <h1><%= title %></h1>
                <% } %>

                <% if(locals.subtitle) { %>
                    <p class="<%= prefix %>-text--sm <%= prefix %>-mb-3w" ><%= subtitle %></p>
                <% } %>

                <% if(locals.description) { %>
                    <p class="<%= prefix %>-text--lg <%= prefix %>-mb-3w" ><%= description %></p>
                <% } %>

                <% if(locals.text) { %>
                    <p class="<%= prefix %>-text--sm <%= prefix %>-mb-6w" >
                        <%- text %>
                    </p>
                <% } %>

                <ul class="fr-btns-group fr-btns-group--inline-md">
                    <li>
                        <a class="<%= prefix %>-btn" href="/" title="<%= getText('button.home', 'response') %>">
                            <%= getText('button.home', 'response') %>
                        </a>
                    </li>
                    <% if(locals.contact) { %>
                        <li>
                            <a class="<%= prefix %>-btn <%= prefix %>-btn--secondary" <%- includeAttrs(contactLink); %>>
                                <%= getText('button.contact', 'response') %>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
            <div class="<%= prefix %>-col-12 <%= prefix %>-col-md-3 <%= prefix %>-col-offset-md-1 <%= prefix %>-px-6w <%= prefix %>-px-md-0">
                <svg class="<%= prefix %>-responsive-img fr-artwork" aria-hidden="true" width="160" height="200" xml:space="preserve" viewBox="0 0 160 200">
                    <use class="fr-artwork-motif" xlink:href="<%= relativeRoot %>dist/artwork/potatoe-background.svg#artwork-motif"></use>
                    <use class="fr-artwork-background" xlink:href="<%= relativeRoot %>dist/artwork/potatoe-background.svg#artwork-background"></use>
                    <g transform="translate(40, 60)">
                        <use class="fr-artwork-decorative" xlink:href="<%= relativeRoot %>dist/artwork/technical-error.svg#artwork-decorative"></use>
                        <use class="fr-artwork-minor" xlink:href="<%= relativeRoot %>dist/artwork/technical-error.svg#artwork-minor"></use>
                        <use class="fr-artwork-major" xlink:href="<%= relativeRoot %>dist/artwork/technical-error.svg#artwork-major"></use>
                    </g>
                </svg>
            </div>
        </div>
    </div>
</main>
